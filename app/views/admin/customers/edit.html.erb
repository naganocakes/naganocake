<h2>{<%= @customer.last_name %> + <%= @customer.first_name %>}さんの会員情報編集</h2>
<%= form_with model: @customer do |f| %>
<label for="id">会員ID</label>
<p>氏名</p>
<%= f.text_field :last_name %>
<%= f.text_field :first_name %>
<p>フリガナ</p>
<%= f.text_field :last_name_kana %>
<%= f.text_field :first_name_kana %>
<p>郵便番号</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>電話番号</p>
<%= f.text_field :address %>
<%= f.text_field :address %>
<p>メールアドレス</p>
<%= f.email_field :email %>
<p>会員ステータス</p>
<%= f.radio_button :is_deleted, true %>
<%= f.label :is_active, '退会' %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, '有効' %>
<%= f.submit "変更を保存", class:"btn btn-success" %>
<% end %>