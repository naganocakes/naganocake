<p id="notice"></p>
<div class="container">
    <div class="row">
      <div class="col-12 px-5 px-sm-0">
        <h2>ジャンル一覧・追加</h2>
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
         <% if @genre.errors.any? %>
          <div id="error_explanation" >
           <h3><%= @genre.errors.count %> error prohibited this obj from being saved: </h3>
           <% @genre.errors.full_messages.each do |message| %>
            <ul>
             <li> <%= message %></li>
            </ul>
           <% end %>
          </div>
         <% end %>
         <p id="notice"></p>
        <div class="row">
          <div class="col-3">
            <p>ジャンル名</p>
          </div>
          <div class="col-3">
            <div class="field">
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
          </div>
          <div class="col-3">
            <div class="actions">
                <%= f.submit "新規登録", class:"btn btn-success" %>
            </div>
          </div>
        </div>
        <% end %><br />
        <div class="col-5">
          <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-success", role:"button" %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
        </div>

      </div>
    </div>
</div>