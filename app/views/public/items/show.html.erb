<%= image_tag @item.image, size: "240x300", class: "bd-placeholder-img bd-placeholder-img-lg card-img rounded shadow-lg" %>
<h1><%= @item.name %></h1>
<h3><%= @item.introduction %></h3>
<h1>¥ <%= @item.tax_price.to_s(:delimited) %>  
<span>(税込)</span></h1>
<%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
<%= f.hidden_field :@item.id %>
<%= f.select :amount, (1..9), { selected: 1 } %>
<%= f.submit "カートに入れる", class: "btn btn-success" %>
<% end %>